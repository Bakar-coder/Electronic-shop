<div class="navbar">
  <div class="container navbar-content">
    <h3 class="logo"><a href="/">Shop</a></h3>

    <input type="checkbox" id="toggler" class="toggler" />
    <label class="nav-toogle" for="toggler">
      <span class="bar"></span><span class="bar"></span
      ><span class="bar"></span>
    </label>

    <ul class="list-group">
      <li class="list-item">
        <a class="<%= path === '/' ? 'active' : 'default' %>" href="/">Home</a>
      </li>
      <li class="list-item">
        <a
          class="<%= path === '/products' ? 'active' : 'default' %>"
          href="/products"
          >Products</a
        >
      </li>
      <li class="list-item">
        <a class="<%= path === '/cart' ? 'active' : 'default' %>" href="/cart"
          >Cart</a
        >
      </li>
      <% if (!isAuth) {%>
      <li class="list-item">
        <a
          class="<%= path === '/users/register' ? 'active' : 'default' %>"
          href="/users/register"
          >Register</a
        >
      </li>
      <li class="list-item">
        <a
          class="<%= path === '/users/login' ? 'active' : 'default' %>"
          href="/users/login"
          >Login</a
        >
      </li>
      <%} %> <% if (user && user.isAdmin) {%>
      <li class="list-item">
        <a
          class="<%= path === '/admin/admin-products' ? 'active' : 'default' %>"
          href="/admin-products"
          >Admin-Products</a
        >
      </li>
      <li class="list-item">
        <a
          class="<%= path === '/orders' ? 'active' : 'default' %>"
          href="/orders"
          >Orders</a
        >
      </li>

      <li class="list-item">
        <a
          class="<%= path === '/admin/add-product' ? 'active' : 'default' %>"
          href="/admin/add-product"
          >Add-Product</a
        >
      </li>
      <li class="list-item">
        <a
          class="<%= path === '/admin/dashboard' ? 'active' : 'default' %>"
          href="/admin/dashboard"
          >Dashboard</a
        >
      </li>
      <%}%> <% if (isAuth) {%>
      <li class="list-item">
        <a
          class="<%= path === '/users/profile' ? 'active' : 'default' %>"
          href="/users/profile"
          ><%= user.username %></a
        >
      </li>
      <li class="list-item">
        <form action="/users/logout" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button class="btn btn-primary">Logout</button>
        </form>
      </li>
      <%}%>
    </ul>
  </div>
</div>
